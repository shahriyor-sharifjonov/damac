mixin amenities()
    section.amenities#amenities 
        .amenities__body 
            .amenities__wrapper 
                .amenities__item 
                    p.amenities__item-title 01. Panoramic views 
                    .amenities__item-img 
                        img(src="@img/amenities-1.png", alt="" draggable="false") 
                .amenities__item 
                    p.amenities__item-title 02. Floating pool 
                    .amenities__item-img 
                        img(src="@img/amenities-2.png", alt="" draggable="false") 
                .amenities__item 
                    p.amenities__item-title 03. Maritime centre 
                    .amenities__item-img  
                        img(src="@img/amenities-3.png", alt="" draggable="false") 
                .amenities__item 
                    p.amenities__item-title 04. Exclusive design 
                    .amenities__item-img 
                        img(src="@img/amenities-4.png", alt="" draggable="false") 
        .amenities__carousel.container  
            h2.amenities__title Panoramic views 
            .swiper.amenities__carousel-swiper.amenities__ctop 
                .swiper-wrapper 
                    .swiper-slide.amenities__carousel-item 
                        img(src="@img/amenities-1.png", alt="" draggable="false") 
                    .swiper-slide.amenities__carousel-item 
                        img(src="@img/amenities-2.png", alt="" draggable="false") 
                    .swiper-slide.amenities__carousel-item 
                        img(src="@img/amenities-3.png", alt="" draggable="false")
                    .swiper-slide.amenities__carousel-item 
                        img(src="@img/amenities-4.png", alt="" draggable="false")
            .swiper.amenities__gallery.amenities__cbot 
                .swiper-wrapper 
                    .swiper-slide.amenities__gallery-item 
                        img(src="@img/amenities-1.png", alt="" draggable="false")
                    .swiper-slide.amenities__gallery-item 
                        img(src="@img/amenities-2.png", alt="" draggable="false")
                    .swiper-slide.amenities__gallery-item 
                        img(src="@img/amenities-3.png", alt="" draggable="false")
                    .swiper-slide.amenities__gallery-item 
                        img(src="@img/amenities-4.png", alt="" draggable="false")