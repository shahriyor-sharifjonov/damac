mixin about()
    section.about#about
        .about__body.container 
            .about__left 
                h2.about__title SKY HIGH LUXURY
                p.about__desc Harbour Lights is a luxurious residential building located in the heart of Dubai Maritime City, offering spacious and stylish apartments, panoramic views, and a unique floating pool.
                a(href="#!").about__btn.btn  More details
            .about__right 
                .about__col 
                    p.about__num 
                        span(data-number="1").count 0
                        span.mr ,
                        span(data-number="2").count 0
                        span.mr ,
                        span(data-number="3").count 0
                    p.about__p bedrooms apartments
                .about__col 
                    p(data-number="52").about__num.count 0
                    p.about__p storey building
                .about__col 
                    p.about__num
                        span(data-number="801").count.mr 0
                        span.small sq. ft.
                    p.about__p minimum total area
                .about__col 
                    p.about__num
                        span(data-number="4").count.mr 0
                        span.small years 
                    p.about__p payment plan